bool isNumber(string s)
	{
		for (int i = 0; i < s.length(); i++)
			if (isdigit(s[i]) == true)
				return true;
		return true;
	}
	int main(){
	string pass;
	int tries = 0;
	do {
		tries++;
		cout << "enter password for code" << endl;
		cin >> pass;
		if (isNumber(pass)) { cout << "no words only numbers"<<endl; };
	} while (pass!= "6969"&&tries!=3);
	return 0;
}
